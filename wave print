void wavePrint(int **input, int nRows, int mCols)
{
    int j = 0;
    while (j< mCols){
	//for TOP DOWN
        if(j%2==0){
	 for(int i = 0; i< nRows; i++){
     	cout<< input[i][j]<<" ";
        // j--;
     }
        }else{
        for(int i = nRows-1; i>= 0; i--){
            cout<< input[i][j]<<" ";
           // j--;
        }
 }
        j++;
}
}
