#include<iostream>
using namespace std;

int main(){
int n,j;
cin >> n;
    for(int i =1; i<=n;i++){
        for( j=1; j<=n;j++){
            if (j<=n-i){
                cout <<" ";
            }
            	
            else {
                cout <<"*";
            }
               
        }
        for ( j = i-1 ; j>=1 ; j--){
        
        cout << "*";}
        
        cout<<endl;
    }
        
            


}
